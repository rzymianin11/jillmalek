@font-face {
	font-family: "jill-icons";
	src: url({{ 'jill-icons.eot' | asset_url }});
	src: url({{ 'jill-icons.eot?#iefix' | asset_url }}) format('eot'),
		url({{ 'jill-icons.woff2' | asset_url }}) format('woff2'),
		url({{ 'jill-icons.woff' | asset_url }}) format('woff'),
		url({{ 'jill-icons.ttf' | asset_url }}) format('truetype'),
		url({{ 'jill-icons.svg#jill-icons' | asset_url }}) format('svg');
}

@mixin icon-styles {
	font-family: "jill-icons";
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	font-style: normal;
	font-variant: normal;
	font-weight: normal;
	// speak: none; // only necessary if not using the private unicode range (firstGlyph option)
	text-decoration: none;
	text-transform: none;
}

%icon {
	@include icon-styles;
}

@function icon-char($filename) {
	$char: "";

	@if $filename == arrow-down {
		$char: "\E001";
	}
	@if $filename == camera {
		$char: "\E002";
	}
	@if $filename == cart {
		$char: "\E003";
	}
	@if $filename == close {
		$char: "\E004";
	}
	@if $filename == facebook {
		$char: "\E005";
	}
	@if $filename == filter {
		$char: "\E006";
	}
	@if $filename == left-arrow {
		$char: "\E007";
	}
	@if $filename == pinterest {
		$char: "\E008";
	}
	@if $filename == right-arrow {
		$char: "\E009";
	}

	@return $char;
}

@mixin icon($filename, $insert: before, $extend: true) {
	&:#{$insert} {
		@if $extend {
			@extend %icon;
		} @else {
			@include icon-styles;
		}
		content: icon-char($filename);
	}
}

.icon-arrow-down {
	@include icon(arrow-down);
}
.icon-camera {
	@include icon(camera);
}
.icon-cart {
	@include icon(cart);
}
.icon-close {
	@include icon(close);
}
.icon-facebook {
	@include icon(facebook);
}
.icon-filter {
	@include icon(filter);
}
.icon-left-arrow {
	@include icon(left-arrow);
}
.icon-pinterest {
	@include icon(pinterest);
}
.icon-right-arrow {
	@include icon(right-arrow);
}
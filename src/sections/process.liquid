<section class="process process-{{ section.id }}">
	<div class="container">
		<div class="row no-gutters section-row align-items-stretch {% if section.settings.position == "left" %}flex-row-reverse{% endif %} ">
			<div class="col-lg-6 img">
				<div class="slickjs">
				  {%- for block in section.blocks -%}
				  	<div class="position-relative">
					  	<div class="bg" style="background-image: url('{{ block.settings.bg | img_url: '1920x' }}');"></div>
					</div>
				  {% endfor %}
				</div>
			</div>
			<div class="col-lg-6" style="background-color: {{ section.settings.color_code }};">
				<div class="slickjs-nav">
					 {%- for block in section.blocks -%}
					 	<div>
						 	<h3>{{ block.settings.title }}</h3>
						 	{{ block.settings.text }}
						 	<a href="{{ block.settings.button_link }}" class="btn btn-primary">{{ block.settings.button_label }}</a>
						 </div>
					 {% endfor %}
				</div>
			</div>
		</div>
	</div>
</section>

<style type="text/css">
	.process-{{ section.id }} .slick-arrow:before {
		color: {{ section.settings.arrows_color }} !important;
	}
	.process-{{ section.id }} .btn:after {
		color: {{ section.settings.arrows_color }} !important;		
	}
</style>

{% schema %}
  {
    "name": "Process",
    "settings": [
		{
		   "type":      "select",
		   "id":        "position",
		   "label":     "Position",
		   "options": [
		     {
		       "group": "value",
		       "value": "left",
		       "label": "On left"
		     },
		     {
		       "group": "value",
		       "value": "right",
		       "label": "On right"
		     }
		   ],
		   "default":   "right",
		   "info":      "On right"
		},
		{
	        "type": "text",
	        "id": "color_code",
	        "label": "HEX color code background",
	        "default": "#4B515D"
		},
		{
	        "type": "text",
	        "id": "arrows_color",
	        "label": "HEX color of arrows",
	        "default": "#4B515D"
		}
    ],
	"blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
            {
		        "type": "image_picker",
		        "id": "bg",
		        "label": "Background"
            },
            {
		        "type": "text",
		        "id": "title",
		        "label": "Title"
            },
		      {
		        "type": "richtext",
		        "id": "text",
		        "label": "Text",
		        "default": "<p>It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.</p>"
		      },
		      {
		        "type": "text",
		        "id": "button_label",
		        "label": "Button label"
		      },
		      {
		        "type": "url",
		        "id": "button_link",
		        "label": "Button link"
		      }
        ]
      }
    ],
    "presets": [
      {
        "name": "Process",
        "category": "Image"
      }
    ]
  }
{% endschema %}

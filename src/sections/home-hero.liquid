<section class="home-hero">
	<div class="container-fluid">
		<div class="row section-row" style="background-color: {{ section.settings.bg-coor }};">
			<div class="col-content d-flex flex-column justify-content-center align-items-start">
				<h1>{{ section.settings.title }}</h1>
				<div class="text-box">
					{{ section.settings.text }}
				</div>
				<a href="{{ section.settings.button_link }}" class="btn btn-primary">{{ section.settings.button_label }}</a>
			</div>
			<div class="col-image">
				<div class="bg" style="background-image: url('{{ section.settings.bg-right | img_url: '960x' }}');"></div>
			</div>
		</div>
	</div>
</section>

{% schema %}
  {
    "name": "Home hero section",
    "settings": [
      {
        "type": "color",
        "id": "bg-coor",
        "label": "Background color on left box",
        "default" : "#AE9A7E"
      },
      {
        "type": "image_picker",
        "id": "bg-left",
        "label": "Background on left box"
      },
      {
        "type": "image_picker",
        "id": "bg-right",
        "label": "Background on right box"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "An expression of light"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Luci Della Citt√†<br/>Wallpaper Display at<br/>Bergdorf Goodman<br/>New York</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Home hero section",
        "category": "Image"
      }
    ]
  }
{% endschema %}
